<mujoco model="scene">
    <compiler meshdir="assets" texturedir="assets"/>
    <include file="so_arm100.xml" />
    <include file="slidecabinet.xml" />

    <statistic center="0 -0.2 0.1" extent="0.4"/>

    <visual>
      <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
      <rgba haze="0.15 0.25 0.35 1"/>
      <global azimuth="140" elevation="-30"/>
    </visual>

    <asset>
        <mesh file="tablelegs.obj"/>
        <mesh file="tabletop.obj"/>
        <texture type="2d" file="small_meta_table_diffuse.png"/>

        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
            height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
            rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
            reflectance="0.2" />

        <material name="cube_red_mat" rgba="1.0 0.0 0.0 1"/>
        <material name="cube_green_mat" rgba="0.0 1.0 0.0 1"/>
        <material name="cube_blue_mat" rgba="0.0 0.0 1.0 1"/>
        <material name="table" texture="small_meta_table_diffuse"/>

    </asset>

    <worldbody>
        <light pos="0 0 3.5" dir="0 0 -1" directional="true" />
        <geom name="floor" size="0 0 0.05" pos="0 0 0" type="plane" material="groundplane" />

        <geom mesh="tabletop" material="table" class="visual" pos="0.41 0 0" quat="1 0 0 1"/>
        <geom mesh="tablelegs" material="table" class="visual" pos="0.41 0 0" quat="1 0 0 1"/>
        <geom name="table" pos="0.41 0 0.65" size="0.61 0.37 0.1" type="box" class="collision"/>


        <!-- 顶部相机视角 -->
        <camera name="top_camera" mode="fixed" pos="0.41 0 1.6" euler="0 0 0" fovy="53" />

    </worldbody>
</mujoco>